{
  "name": "pods",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ pods-finance/$NAME",
    "configure": "tsc src/constants/$NETWORK.ts --outDir src/_generated",
    "template": "mustache src/_generated/$NETWORK.js subgraph.template.yaml > subgraph.yaml",
    "prepare": "yarn configure && yarn template",
    "deploy:mainnet": "NETWORK=mainnet yarn prepare && NAME=pods yarn deploy",
    "deploy:kovan": "NETWORK=kovan yarn prepare && NAME=pods-kovan yarn deploy",
    "deploy:mumbai": "NETWORK=mumbai yarn prepare && NAME=pods-mumbai yarn deploy",
    "deploy:matic": "NETWORK=matic yarn prepare && NAME=pods-matic yarn deploy",
    "create-local": "graph create --node http://localhost:8020/ pods-finance/pods",
    "remove-local": "graph remove --node http://localhost:8020/ pods-finance/pods",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 pods-finance/pods",
    "tsc": "tsc"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.19.0",
    "@graphprotocol/graph-ts": "0.19.0"
  },
  "devDependencies": {
    "mustache": "^4.2.0",
    "typescript": "^4.2.4"
  }
}